{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd sistema-votacion-backend && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd sistema-votacion-backend && java -jar target/sistema-votacion-backend-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

